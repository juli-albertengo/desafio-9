<main class='container my-3'>
    <h1>Vista de Productos</h1>
    {{#if mensaje}}
        <p>No hay productos cargados</p>
        {{else}}
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Foto</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each misProductos}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td><img src='{{this.thumbnail}}'/></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
    {{/if}}
</main>
